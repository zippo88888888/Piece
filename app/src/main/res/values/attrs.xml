<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="SuperStatisticsView">
        
        <!-- 矩形图表最大值的颜色 -->
        <attr name="maxRectangleColor" format="color" />
        <!-- 矩形图表常规颜色 -->
        <attr name="rectangleColor" format="color" />
        <!-- 所有的文字说明颜色（偷下懒） -->
        <attr name="allTextColor" format="color" />
        <!-- 折线表的折线颜色 -->
        <attr name="discountColor" format="color" />
        <!-- X,Y轴颜色 -->
        <attr name="x_yColor" format="color" />

        <!-- 显示矩形图（默认只显示矩形图） -->
        <attr name="showRectangle" format="boolean" />
        <!-- 显示折线图 -->
        <attr name="showDiscount" format="boolean" />

        <!-- X Y 轴名称 -->
        <attr name="y_name" format="string"/>
        <attr name="x_name" format="string" />
        <!-- X Y 轴text大小 -->
        <attr name="x_y_textSize" format="float" />
        <!-- 文字大小 -->
        <attr name="allTextSize" format="float" />

        <!-- 矩形图的宽度（默认根据屏幕大小而定） -->
        <attr name="rectangleWidth" format="integer" />
        <!-- 矩形图的间距（默认根据屏幕大小而定） -->
        <attr name="rectanglePadding" format="integer" />

    </declare-styleable>
</resources>