<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="SuperStatisticsView">
        
        <!-- 矩形图表最大值的颜色 -->
        <attr name="maxRectangleColor" format="color" />
        <!-- 矩形图表常规颜色 -->
        <attr name="rectangleColor" format="color" />
        <!-- 所有的文字说明颜色（偷下懒） -->
        <attr name="allTextColor" format="color" />
        <!-- 折线表的折线颜色 -->
        <attr name="discountColor" format="color" />
        <!-- X,Y轴颜色 -->
        <attr name="x_yColor" format="color" />

        <!-- 显示矩形图（默认只显示矩形图） -->
        <attr name="showRectangle" format="boolean" />
        <!-- 显示折线图 -->
        <attr name="showDiscount" format="boolean" />

        <!-- X Y 轴名称 -->
        <attr name="y_name" format="string"/>
        <attr name="x_name" format="string" />
        <!-- X Y 轴text大小 -->
        <attr name="x_y_textSize" format="float" />
        <!-- 文字大小 -->
        <attr name="allTextSize" format="float" />

        <!-- 矩形图的宽度（默认根据屏幕大小而定） -->
        <attr name="rectangleWidth" format="integer" />
        <!-- 矩形图的间距（默认根据屏幕大小而定） -->
        <attr name="rectanglePadding" format="integer" />

    </declare-styleable>

    <declare-styleable name="MyKeyBoardView">
        <!-- 距离屏幕左边，右边的间距 -->
        <attr name="leftRightPadding" format="dimension" />
        <!-- 距离屏幕顶部，底部的间距 -->
        <attr name="topBottomPadding" format="dimension" />
        <!-- 矩形的间距 -->
        <attr name="rectPadding" format="dimension" />

        <!-- 矩形的圆角大小 -->
        <attr name="rectRound" format="integer" />
        <!-- 矩形边框 -->
        <attr name="rectStrokeWidth" format="float" />
        <!-- 文字大小 -->
        <attr name="txtSize" format="float" />
        <!-- 密文大小 -->
        <attr name="pwdSize" format="float" />
        <!-- 长度 -->
        <attr name="length" format="integer" />

        <!-- 未输入矩形的颜色——默认颜色 -->
        <attr name="defaultInputRectColor" format="color" />

        <!-- 正在输入或已经输入时矩形的颜色 -->
        <attr name="inputRectColor" format="color" />
        <!-- 正在输入或已经输入时文字、密文的颜色 -->
        <attr name="inputTxtColor" format="color" />


        <!-- 是否显示密文 默认显示（如果不显示密文，下面两个属性无效） -->
        <attr name="isShowPassWord" format="boolean" />

    </declare-styleable>
</resources>