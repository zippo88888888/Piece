<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="@dimen/new_md_bottomPadding"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/new_home_list_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/new_home_list_item_pic"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/new_home_list_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_toLeftOf="@+id/new_home_list_item_state"
                        android:layout_toStartOf="@+id/new_home_list_item_state"
                        android:layout_marginRight="5dp"
                        android:lines="1"
                        android:ellipsize="marquee"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/new_home_list_item_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        skin:enable="true"
                        android:textColor="@color/baseColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/new_home_list_item_cjMoneyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交价"
                        android:textColor="#c7c7c7" />

                    <TextView
                        android:id="@+id/new_home_list_item_cjMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/new_home_list_item_cjMoneyTxt"
                        android:layout_toRightOf="@+id/new_home_list_item_cjMoneyTxt"
                        skin:enable="true"
                        android:textColor="@color/baseColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/new_home_list_item_pgMoneyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评估价"
                        android:textColor="#c7c7c7" />

                    <TextView
                        android:id="@+id/new_home_list_item_pgMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/new_home_list_item_pgMoneyTxt"
                        android:layout_toRightOf="@+id/new_home_list_item_pgMoneyTxt"
                        skin:enable="true"
                        android:textColor="@color/baseColor" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/new_home_list_item_timePic"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/home_ic_no"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/new_home_list_item_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_centerInParent="true"
                        android:textSize="13sp"
                        android:lines="1"
                        android:ellipsize="marquee"
                        android:layout_toEndOf="@+id/new_home_list_item_timePic"
                        android:layout_toRightOf="@+id/new_home_list_item_timePic" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#cdcdcd"
                        skin:enable="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.40">

            <TextView
                android:id="@+id/new_home_list_item_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/new_home_list_item_submit"
                android:layout_toStartOf="@+id/new_home_list_item_submit"
                android:textColor="#999999" />

            <com.coorchice.library.SuperTextView
                android:visibility="invisible"
                android:id="@+id/new_home_list_item_submit"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:focusable="false"
                android:textColor="@color/baseColor"
                android:textSize="15sp"
                skin:enable="true"
                app:left_bottom_corner="true"
                app:right_bottom_corner="true"
                app:left_top_corner="true"
                app:right_top_corner="true"
                app:corner="5dp"
                app:stroke_color="@color/baseColor"
                app:stroke_width="1dp"/>


        </RelativeLayout>

        <View
            android:id="@+id/new_home_list_item_bg"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray"
            android:visibility="gone"
            skin:enable="true"/>

    </LinearLayout>

</android.support.v7.widget.CardView>