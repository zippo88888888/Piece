<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zp="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_layout" />

    <com.official.read.weight.SuperStatisticsView
        android:id="@+id/diy_superStatisticsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        zp:maxRectangleColor="@color/baseColor"
        zp:rectangleColor="@color/green"
        android:visibility="gone"/>

    <com.official.read.weight.RadarView
        android:id="@+id/diy_twoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/diy_statisticsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/diy_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="矩形图"/>

            <RadioButton
                android:id="@+id/diy_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="折线图"/>

        </RadioGroup>

        <com.official.read.weight.StatisticsView
            android:id="@+id/diy_statisticsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>

